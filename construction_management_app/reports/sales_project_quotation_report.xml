<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="sales_project_quotation_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header">
                    <div class="row">
                        <t t-if="o.company_id.certificate_header">
                            <img style="width:100%;z-index:600;height: 100px;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.certificate_header)"/>
                        </t>
                    </div>
                </div>
                <div t-att-data-oe-model="o._name" t-att-data-oe-id="o.id" class="article">
                    <br/>
                    <div style="margin-top:75px;"/>
                    <div class="page">
                        <h5 style="text-align:left;width:100%;"><b><u><span style="width:50%;">To: <span t-esc="o.sale_id.partner_id.name"/></span>     <span style="width:50%;">From:<span t-esc="o.company_id.name"/></span> </u></b></h5>
                        <br/>
                        <h5 style="text-align:left;width:100%;"><b><u><span style="width:33%;">Tel: <span t-esc="o.sale_id.partner_id.phone"/></span>     Fax:<span t-esc="o.sale_id.partner_id.mobile"/>      Date:<span t-esc="o.date"/> </u></b></h5>
                        <br/>
                        <h5 style="text-align:left;width:100%;"><b><u>Attn: <span t-esc="o.attention"/>     Ref:<span t-esc="o.sale_id.name"/> </u></b></h5>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <report
            string="Quotation"
            id="action_sales_project_quotation_report"
            model="sales.project.quotation"
            name="construction_management_app.sales_project_quotation_report_template"
            file="construction_management_app.sales_project_quotation_report_template"
            report_type="qweb-pdf"
            paperformat="construction_management_app.water_proofing_paper_format"/>

</odoo>
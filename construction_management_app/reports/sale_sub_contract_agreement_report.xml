<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="sale_sub_contract_agreement_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="header">
                    <div class="row">
                        <t t-if="o.company_id.certificate_header">
                            <img style="width:100%;z-index:600;height: 100px;" t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.certificate_header)"/>
                        </t>
                    </div>
                </div>
                    <div class="page" style="line-height: 1.6;">
                        <h6 style="text-align:left;width:100%;"><b>SCA Ref.No : <span t-esc="o.sale_id.name"/> </b></h6>
                        <h2 style="text-align:center;"><u>Sub Contract Agreement</u></h2><br/>
                        <h5><i><u><strong>The Sub Contract Agreement between <span t-esc="o.sale_id.partner_id.name"/> Tel:<span t-esc="o.company_id.phone"/> Fax: <span t-esc="o.company_id.phone"/>
                            (First Party) and <span t-esc="o.company_id.name"/> (second party) is hereby agreed scope of work and payment terms as follows and signed this agreement, dated <span t-esc="time.strftime('%d-%B-%Y')"/></strong></u></i></h5>
                        <i><table style="width:100%;font-size:16px;">
                            <tr style="width:100%;">
                                <td style="width:45%"><strong>CONTRACTOR</strong></td>
                                <td style="width:10%"><strong>:</strong></td>
                                <td style="width:45%"><strong><span t-esc="o.sale_id.partner_id.name"/> </strong></td>
                            </tr>
                            <tr style="width:100%;">
                                <td style="width:45%"><strong>OWNER/CLIENT</strong></td>
                                <td style="width:10%"><strong>:</strong></td>
                                <td style="width:45%"><strong><span t-esc="o.client"/> </strong></td>
                            </tr>
                            <tr style="width:100%;">
                                <td style="width:45%"><strong>CONSULTANT</strong></td>
                                <td style="width:10%"><strong>:</strong></td>
                                <td style="width:45%"><strong><span t-esc="o.consultant"/> </strong></td>
                            </tr>
                            <tr style="width:100%;">
                                <td style="width:45%"><strong>PROJECT</strong></td>
                                <td style="width:10%"><strong>:</strong></td>
                                <td style="width:45%"><strong><span t-esc="o.sale_id.project_name"/> </strong></td>
                            </tr>
                            <tr style="width:100%;">
                                <td style="width:45%"><strong>CONTACT</strong></td>
                                <td style="width:10%"><strong>:</strong></td>
                                <td style="width:45%"><strong><span t-esc="o.contact"/> </strong></td>
                            </tr>
                        </table></i>
                        <br/>
                        <span>
                            <span style="text-align:left;font-size:16px;" t-raw="o.nature_work"/>
                        </span>
                        <br/>
                        <table style="border:1px solid black;width:100%;">
                            <tr>
                                <th style="border:1px solid black;"></th>
                                <th style="border:1px solid black;">Approx m<sup>2</sup></th>
                                <th style="border:1px solid black;">AED/m<sup>2</sup></th>
                                <th style="border:1px solid black;">AED</th>
                            </tr>
                            <tr t-foreach="o.sale_id.order_line" t-as="order">
                                <td style="border:1px solid black;"><span t-esc="order.name"/> </td>
                                <td style="border:1px solid black;"><span t-esc="order.product_uom_qty"/> </td>
                                <td style="border:1px solid black;"><span t-esc="order.price_unit"/> </td>
                                <td style="border:1px solid black;"><span t-esc="order.price_subtotal"/> </td>
                            </tr>
                            <tr>
                                <th style="border:1px solid black;">VAT 5%</th>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"><span t-esc="o.sale_id.amount_tax"/></td>
                            </tr>

                            <tr>
                                <th style="border:1px solid black;">Total</th>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"></td>
                                <td style="border:1px solid black;"><span t-esc="o.sale_id.amount_total"/></td>
                            </tr>
                        </table>
                        <div style="width:100%;text-align:left;font-size:16px;"><strong><span>
                            <i>Note: all required documents like submittals, samples, drawings, and approvals from consultant/client/any other authority should be taken prior to start the work.</i>
                        </span></strong>
                        </div>
                        <p style="page-break-after:always;"/>
                        <div style="width:100%;">
                            <h4><u><i>EXCLUSIONS:</i></u><i>(To be provided by the main contractor)</i></h4>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Secured storage area for our material</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Safe access to the work area (Ladders, scaffolding) etc.</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Hoisting of material to the work area as required</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Electricity 3 phase 45 K.W</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Water test by main contractor and inspection by Al Mayas</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   A/C, Water tank foundation and any other civil work by main contractor</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Free access for concrete pump and mixer to the site by main contractor</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Any permission, if necessary from authority like RTA/Municipality by Main Contractor</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Cement and sand for ridges and angle fillet provided by main contractor</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Building expansion joints are not included in our scope of work</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Any damage to the completed/tested waterproofing by others to be notified to us immediately</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>*   Foundation less than one meter square shall not be deducted for the quantity taken at site</i></p>
                        </div>
                        <div style="width:100%;">
                            <h4><u><i>Special Note:</i></u></h4>
                            <p style="margin-top: 0;margin-bottom:0;"><i>1)  Nobody allowed to work on the roof after PU application and the entrance and the roof shall be closed until screed concrete is over.</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>2)  After PU and Screed no drilling any type of breaking the concrete is not allowed and any damage of PU the main contractor shall be held responsible and pay for the repair.</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>3)  Any delay in payment as agreed, Al Mayas reserve the right to hold the work until the payment is cleared.</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>4)  Any damage after PU application repair charge will be applicable.</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>5)  Concrete shall be done using 42m pump. Any additional facility required shall be provided by the main contractor.</i></p>
                            <p style="margin-top: 0;margin-bottom:0;"><i>6)  No part-job shall be done in one roof.</i></p>
                        </div>
                        <div style="width:100%;">
                            <h4><u>GUARANTEE</u></h4>
                            <span t-esc="o.guarantee"/>
                        </div>
                        <div style="width:100%;">
                            <h4><u> CONTRACT</u></h4>
                            <span t-esc="o.contract"/>
                        </div>
                        <div style="width:100%;">
                            <h4><u> VALIDITY OF QUOTATION</u></h4>
                            <span t-esc="o.sale_id.validity"/>
                        </div>
                        <div style="width:100%;">
                            <h4><u> PAYMENT TERMS(please refer the payment and collection)</u></h4>
                            <span t-esc="o.sale_id.payment_term_id.name"/>
                        </div>
                        <div style="width:100%;">
                            <h4><u> COMMENCEMENT</u></h4>
                            <span t-esc="o.commencement"/>
                            <span><i><u>Note: for all your work progress enquiries &amp; information please call FELIX-050 184 9071</u></i></span>
                        </div>
                        <div style="width:100%;">
                            <div style="width:50%; float:left;">
                                <p><i>Main Contractor(First Party)</i></p>
                                <p><strong><span t-esc="o.sale_id.partner_id.name"/> </strong></p>
                                <p><i>Signature:</i></p>
                                <p><i>Date:</i></p>

                            </div>
                            <div style="width:50%; float:right;">
                                <p><i>Sub Contractor(Second Party)</i></p>
                                <p><strong><span t-esc="o.company_id.name"/> </strong></p>
                                <p><i>Signature:</i></p>
                                <p><i>Date:</i></p>

                            </div>
                        </div>
                    </div>
                <div class="footer" style="font-size:16px;border-top:1px solid black;">
                    <p>Tel.: 06-5345347 Fax : 06-5345990 P.O.Box : 27734  Sharjah – U.A.E. E- mail : info@almayasuae.com<br/>
                        Tel: 04-2257511 Fax : 04-2257511 P.O.Box : 234828  Dubai –U.A.E. Website : www.almayasuae.com  </p>
                </div>

            </t>
        </t>

    </template>

    <report
            string="Sub Contract Agreement"
            id="action_sale_sub_contract_agreement_report"
            model="sale.sub.contract.agreement"
            name="construction_management_app.sale_sub_contract_agreement_report_template"
            file="construction_management_app.sale_sub_contract_agreement_report_template"
            report_type="qweb-pdf"
            paperformat="construction_management_app.quotation_paper_format"/>


</odoo>